     <!-- services section ends -->
     
     <!-- listings section starts  -->
   
     <section class="listings">
     
        <h1 class="heading">Latest Listings</h1>
     
        <div class="box-container">
         
            <% for(data of allListing) { %>
               <div class="box">
                  <div class="admin">
                     <h3> <%= data.owner.username.charAt(0).toUpperCase() %></h3>
                     <div>
                        <p> Owner: <%= data.owner.username.toUpperCase() %></p>
                        <span> <%=data.date%> </span>
                     </div>
                  </div>
                  <div class="thumb">
                     <p class="total-images"><i class="far fa-image"></i><span>4</span></p>
                     <p class="type"><span> <%= data.property_type %></span>  
                        <span> <%= data.property_for %> </span>
                     </p>
                     
                     <form action="" method="post" class="save">
                        <button type="submit" name="save" class="far fa-heart"></button>
                     </form>
                     <img src=<%= data.mainImage.url  %> alt="#">
                     
                     
                    
                  </div>
                  <h3 class="name"><%= data.title%></h3>
                  <p class="location"><i class="fas fa-map-marker-alt"></i><span> <%= data.address.locality %>,  <%= data.address.city %>,  <%= data.address.country %></span></p> <%= data.address.locality %>
                  
                  <div class="flex">
                     <p><i class="fas fa-bed"></i><span> <%=data.details.bedroom%> </span></p>
                     <p><i class="fas fa-bath"></i><span> <%=data.details.bathroom%> </span></p>
                     <p><i class="fas fa-maximize"></i><span> <%=data.details.carpetArea%> </span></p>
                  </div>
                  <a href="/home/listings/<%=data._id%>" class="btn">view property</a>
               </div>
            <% } %>
        
     
        </div>
     
        <div style="margin-top: 2rem; text-align:center;">
           <a href="/home/listings" class="inline-btn">view all</a>
        </div>
        
     
     </section>
</body>